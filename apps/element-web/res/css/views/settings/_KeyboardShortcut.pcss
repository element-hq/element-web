.mx_KeyboardShortcut {
    kbd {
        padding: 5px;
        border-radius: 4px;
        background-color: $background;
        min-width: 20px;
        text-align: center;
        display: inline-block;
        border: 1px solid $kbd-border-color;
        box-shadow: 0 2px $kbd-border-color;
        text-transform: capitalize;
    }
}
