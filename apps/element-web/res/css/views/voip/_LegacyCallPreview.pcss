.mx_LegacyCallPreview {
    align-items: flex-end;
    display: flex;
    flex-direction: column;
    gap: $spacing-16;
    left: 0;
    position: fixed;
    top: 0;
    /* Display above any widget elements */
    z-index: 102;

    .mx_VideoFeed_remote.mx_VideoFeed_voice {
        min-height: 150px;
    }

    .mx_VideoFeed_local {
        border-radius: 8px;
        overflow: hidden;
    }
}
