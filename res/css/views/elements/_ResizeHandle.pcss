.mx_ResizeHandle {
    cursor: row-resize;
    flex: 0 0 auto;
    z-index: 100;

    &.mx_ResizeHandle--horizontal {
        margin: 0 -5px;
        padding: 0 5px;
        cursor: col-resize;

        > div {
            width: 1px;
            height: 100%;
        }
    }

    &.mx_ResizeHandle--vertical {
        margin: -5px 0;
        padding: 5px 0;

        > div {
            height: 1px;
        }
    }
}
