.mx_CompleteSecurityBody {
    width: 600px;
    color: $authpage-primary-color;
    background-color: $background;
    border-radius: 4px;
    padding: 20px;
    box-sizing: border-box;

    h2 {
        font-size: $font-24px;
        font-weight: var(--cpd-font-weight-semibold);
        margin-top: 0;
    }

    h3 {
        font: var(--cpd-font-body-md-semibold);
    }

    a:link,
    a:hover,
    a:visited {
        color: $accent;
        text-decoration: none;
    }
}
