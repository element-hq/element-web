{
    "compilerOptions": {
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "noUnusedLocals": true,
        "module": "node16",
        "target": "es2024",
        "moduleResolution": "node16",
        "sourceMap": false,
        "outDir": "./lib",
        "noEmit": true,
        "declaration": true,
        "strict": true,
        "lib": ["es2024"],
        "skipLibCheck": false
    },
    "include": ["./scripts/**/*.ts"]
}
